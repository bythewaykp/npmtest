{
    "name": "@bythewaykp/npmtest",
    "version": "1.0.0",
    "description": "Sample npm module developed for testing purposes",
    "main": "./lib/cjs/index.js",
    "types": "./lib/cjs/types/index.d.ts",
    "homepage": "https://github.com/kp-here",
    "repository": {
        "type": "git",
        "url": "https://github.com/kp-here/npmtest.git"
    },
    "scripts": {
        "exec": "echo $1",
        "dev": "ts-node ./script.ts",
        "clean": "rm -rf ./lib",
        "clean_m": "rm -rf ./node_modules",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
        "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
        "prepack": "npm run build",
        "test": "mocha",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p ./configs/tsconfig.esm.json"
    },
    "keywords": [
        "npm",
        "test"
    ],
    "files": [
        "lib/**/*"
    ],
    "author": "kp.here",
    "license": "ISC",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/types/index.d.ts",
                "default": "./lib/esm/index.mjs"
            },
            "require": {
                "types": "./lib/cjs/types/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0"
    }
}
